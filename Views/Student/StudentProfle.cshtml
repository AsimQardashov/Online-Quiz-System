
@{
    ViewBag.Title = "StudentProfle";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<style>
    .col-sm-8 input {
        display: none;
    }
</style>
<div style="padding-bottom:20px;" class="container profile-cont">
    <div class="Profile">
        <div class="col-lg-12 profile-header">
            <form action="~/Student/StudentProfle" method="post">

                <div class="profile content">
                    <div class="text-center profile-card">
                        @foreach (System.Data.DataRow item in ViewBag.User.Rows)
                        {
                            <div class="col-7 profile-info">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <p class="mb-0">Ad / Soyad</p>
                                    </div>
                                    <div class="col-sm-8">
                                        <p class="text-muted mb-0  profile-card-input">@item["UserFullName"]</p>
                                        <input type="text" name="UserFullName" id="">
                                    </div>
                                </div>
                                <hr />
                                <div class="row">
                                    <div class="col-sm-4">
                                        <p class="mb-0">İstifadəçi adı</p>
                                    </div>
                                    <div class="col-sm-8">
                                        <p class="text-muted mb-0  profile-card-input">@item["UserName"]</p>
                                        <input type="text" name="UserName" id="">
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-4">
                                        <p class="mb-0">Email</p>
                                    </div>
                                    <div class="col-sm-8">
                                        <p class="text-muted mb-0 profile-card-input">@item["UserEmail"]</p>
                                        <input type="email" name="UserEmail" id="">
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-4">
                                        <p class="mb-0">Qeydiyyat tarixi</p>
                                    </div>
                                    <div class="col-sm-8">
                                        <p class="text-muted mb-0 profile-card-input1">@item["UserDate"]</p>
                                        @*<input type="text" name="UserDate" id="">*@
                                    </div>
                                </div>
                                <hr>
                            </div>
                            <div class="col-lg-5 profile-iconic">
                                <img src="~/Image/@item["UserPhoto"]"
                                     alt="avatar" class="rounded-circle img-fluid" style="width: 150px;">
                                <h5 class="my-3">@item["UserFullName"]</h5>
                                <p class="text-muted mb-1">Metallurgiya</p>
                                <p class="text-muted mb-4">Dag-Mədən</p>
                                <div class="d-flex justify-content-center mb-2">
                                    <div class="Profile-edit">
                                        <button type="button" class="btn btn-primary profile-edit">Edit</button>
                                        <button type="submit" class="btn btn-primary profile-tesdiq-et">Təsdiq Et</button>
                                        <button type="button" class="btn btn-danger profile-ləğv-et">Ləğv Et</button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

            </form>
        </div>
        <div class="col-lg-12">
            <div class="profile-main">
                <div class="col-lg-12">
                    <div class="main-box clearfix">
                        <div class="table-responsive">
                            <table class="table user-list">
                                <thead>
                                    <tr>
                                        <th><span>Fənn</span></th>
                                        <th><span>Tarix</span></th>
                                        <th class="text-center"><span>Test nəticə</span></th>
                                        <th><span>Müəllimin toplam qiyməti</span></th>
                                        <th><span>Ümumi nəticə</span></th>
                                        <th><span>Qiymət</span></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (System.Data.DataRow item in ViewBag.stdscore.Rows)
                                    {
                                        <tr>
                                            <td>
                                                <a href="#" class="user-link">@item["CQName"]</a>
                                            </td>
                                            <td class="Year">
                                                @item["ExamDate"]
                                            </td>
                                            <td class="text-center">
                                                <span class="label label-default">@item["Score"]</span>
                                            </td>
                                            <td class="Email">
                                                @item["ScorOpen"]
                                            </td>
                                            <td class="Email">
                                                @item["TotalScore"]
                                            </td>
                                            <td class="Email">
                                                @item["Performance"]
                                            </td>

                                        </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
        crossorigin="anonymous"></script>
