<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
          integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet" />
    <title>Imtahanlar</title>
</head>

<body>
    <div style="padding:0;" class="Imtahan container">
        <div class="col-lg-12 Imtahan-mids">
            <form action="~/Student/StartExam" method="post">
                <div class="Quiz ">
                @{ 
                    int i = 0;
                }
                    <input name="ExamId" type="hidden" value="@ViewBag.ExamId" />
                    @foreach (var item in Model)
                    {
                        i++;
                        <div  class="imtahan">
                            <div style="background:white;" class="form-group text-center imth-sual-bashliq">
                                <label  for="">
                                  <strong>@i.   </strong>  @item.QuestionsTest.QText
                                </label>
                                <input type="hidden" name="QId[]" value="@item.QuestionsTest.QId" />
                            </div>
                            <div style="border-radius:6px;" class="options">
                                @foreach (var item1 in item.Variants)
                                {
                                    <div style="border-radius:10px;" class="form-group row imt-sual">
                                        <div class="col-sm-1 col-1 Imth-checkbox">
                                            <input autocomplete="off" value="@item1.VariantId" class="variant form-check-input" type="checkbox"
                                                   name="VariantId[]" id="Imtahan_A">
                                        </div>
                                        <div id="Sual-int" class="col-sm-11 col-11">
                                            <label for="">
                                                @item1.VariantText
                                            </label>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                    @foreach (var item in Model)
                    {
                        <div class="form-group text-center imth-sual-bashliq">
                            <label style="color:black;" for="">
                                @item.QuestionsOpen.QOText <br />
                            </label>
                        </div>
                        <input type="hidden" name="QOId[]" class="form-check-input" value="@item.QuestionsOpen.QOId" />
                        <textarea style="width:60%; margin-left:20%; height:60px; border-radius:6px;" name="SutudentAnswer[]"></textarea>
                    }
                    <div class="imt-sual-tesdiq-et">
                        <button type="submit" class="btn btn-primary">Təsdiq et</button>
                    </div>

                </div> <br />

            </form>

        </div>
    </div>
</body>
</html>
<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
        crossorigin="anonymous"></script>
