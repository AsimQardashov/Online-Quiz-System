
@{
    ViewBag.Title = "CreateExam";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    // Layout = null;
}
<head>
    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<div style="min-height:100vh; width:60%; margin-left:20%; padding-top:24px;">
    <strong class="bildirim">İmtahan 5 açıq 5 test olmaqla 10 sualdan ibarətdir, imtahanı yekunlaşdırdıqdan sonra test suallarından əldə etdiyiniz nəticəni profilinizdə 
    görə bilərsiniz, açıq sualların nəticəsi müəllim qiymətləndirdikdən sonra yenə profilinizdə göstəriləcəkdir</strong>
    <form action="~/Student/CreateExam" method="post">
        <select class="fenler form-control" name="CQId">
            @foreach (System.Data.DataRow item in ViewBag.categories.Rows)
            {
                <option value="@item["CQId"]">@item["CQName"]</option>
            }
        </select>
        <div id="but">
            <button class="btn btn-primary" type="submit">Basla</button>
        </div>
        
    </form>
</div>
