@model ExamingSystem.Models.AddUser
@{
    ViewBag.Title = "AddUser";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

    <div id="Main">
        <div id="middle">
            <div class="middle">
                <div class="Title">
                    <ul class="breadcrumb">
                        <li class="bread-first"><a href="AddUser">Muellimler </a></li>
                        <li class="bracket">/</li>
                        <li class="bread-last"><a href="AddUserT">Shagirdler</a></li>
                    </ul>
                </div>
                <div class="middle1">
                    <div class="Add">
                        <button id="Add" type="button" class="btn btn-primary">Elave Et</button>
                    </div>
                    <div id="search">
                        <div id="search_in"><input type="search" placeholder="Ad / Soyad" name="" id=""></div>
                        <div><i id="search_icon" class="fas fa-search"></i></div>
                        <div><i id="cancel" class="fas fa-times"></i></div>
                    </div>
                </div>
            </div>
        </div>
        <div id="Add-up">
            <form action="~/Admin/AddUser" method="post">
                <div class="Add-up">
                    <div><i id="Add-cancel" class="fas fa-times"></i></div>
                    <div>
                        <h2>Ad / Soyad</h2>
                        @Html.ValidationMessageFor(model => model.UserName)
                        <input type="text" class="form-control" placeholder="Ad / Soyad" name="UserFullName">
                    </div>
                    <div>
                        <h2>Email</h2>
                        <input type="text" class="form-control" placeholder="Istifadəçi adı" name="UserName">
                    </div>
                    <div>
                        <h2>Fenn</h2>
                        <select class="form-control" name="UserMFenn">
                            @foreach (System.Data.DataRow item in ViewBag.Fenn.Rows)
                            {
                                <option value="@item["CQId"]">@item["CQName"]</option>
                            }
                        </select>
                    </div>
                    <div>
                        <h2>E-poçt adresi</h2>
                        <input type="text" class="form-control" placeholder="E-poçt adresi" name="UserEmail" id="">
                    </div>
                    <div>
                        <h2>Invitation</h2>
                        <input type="text" class="form-control" placeholder="Şifrə" name="UserPassword">
                    </div>
                    <div>
                        <button id="Add_button" name="" type="submit" class="btn btn-primary">Elavə Et</button>
                    </div>
                </div>
            </form>
        </div>
        <div id="Table">
            <table class="Table">
                <tr>
                    <th>№</th>
                    <th>Ad / Soyad</th>
                    <th>İstifadəçi adı</th>
                    <th>E-poçt adresi</th>
                    <th>Fənn</th>
                    <th>Date</th>
                    <th>#</th>
                </tr>
                <tbody class="tbody">
                    @{
                        int i = 0;
                    }
                    @foreach (System.Data.DataRow item in ViewBag.Muellim.Rows)
                    {
                        i++;
                    <tr>
                        <td style="display:none;" class="user-id">@item["UserId"]</td>
                        <td>@i</td>
                        <td>@item["UserFullName"]</td>
                        <td>@item["UserName"]</td>
                        <td>@item["UserEmail"]</td>
                        <td>@item["UserMFenn"]</td>
                        <td>@item["UserDate"]</td>
                        <td class="EDIT">
                            <button id="Edit-pg" type="button" class="btn btn-secondary"> <a href="~/Admin/Edit/@item["UserId"]">Deyis</a></button>
                            <button id="Remove" type="button" class="btn btn-danger">Sil</button>
                        </td>
                    </tr>
                    }

                </tbody>


            </table>
        </div>
    </div>
    <div id="Alert">
        <div class="Alert">
            
            <div class="Exclamation">
                <i class="fas fa-exclamation-circle"></i>
            </div>
            <h2>Bunu silmək istədiyinizə əminsiniz ?</h2>
            <div class="Alert-buttons">
                
                <button type="submit" id="Alert-y" class="btn btn-outline-primary"><a id="deleteput" href="">Beli</a></button>
                <button type="button" id="Alert-n" class="btn btn-outline-danger">Xeyr</button>
            </div>
        </div>
    </div>




